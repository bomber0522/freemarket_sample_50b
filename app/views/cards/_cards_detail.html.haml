= form_tag("#", method: :post, id: 'charge-form',  name: 'inputForm', class: 'credit__box_list') do
  %span カード番号
  .required__icon 必須
  .clearfix
  = text_field_tag :content, '半角英数のみ',class: 'text_field'
  = image_tag 'credit_card_icon.png',size: '290x38' , class: 'credit__logo-img'
  .credit__box_expiration_date
    %span 有効期限
    .required__icon 必須
  .clearfix
  = select_tag 'category', options_for_select({'01':'01','02':'02','03':'03','04':'04','05':'05','06':'06','07':'07','08':'08','09':'09','10':'10','11':'11','12':'12'}),class: 'select_tag'
  = fa_icon 'chevron-down', class:'fa_icon_1'
  %sub 月
  .clearfix
  = select_tag 'category', options_for_select({'19':'19','20':'20','21':'21','22':'22','23':'23','24':'24','25':'25','26':'26','27':'27','28':'28','29':'29','30':'30','31':'31','32':'32', '33':'33','34':'34','35':'35'}),class: 'select_tag'
  = fa_icon 'chevron-down', class:'fa_icon_2'
  %sub 年
  .credit__box_security_code
    %br
    %span セキュリティコード
    .required__icon 必須
    .clearfix
    = text_field_tag :cvc, '',  class: 'text_field', id: 'cvc', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: '3'
  
  .credit__box_question
    %span.icon_question ?
    %p カード裏面の番号とは？
  #card_token
    %input{type: 'hidden', name: '#', value: '#'}
      = submit_tag '次へ進む', id: 'token_submit', class:'credit_card redbtn'
